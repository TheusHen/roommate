{
    "name": "theushen/nightwatch",
    "description": "Nightwatch integration for Laravel - receives Bun data and sends to Nightwatch API.",
    "type": "library",
    "authors": [
        {
            "name": "TheusHen",
            "email": "dev@theushen.me"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/routing": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0",
        "illuminate/validation": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.9",
        "phpoption/phpoption": "^1.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nightwatch\\": ""
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nightwatch\\NightwatchServiceProvider"
            ]
        }
    }
}
